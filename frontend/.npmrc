# NPM configuration to handle optional dependencies robustly
# Force platform-specific optional dependencies
target_platform=linux
target_arch=x64

# Allow optional dependencies to fail silently
optional=true

# Disable package-lock during Docker builds to avoid platform conflicts
package-lock=false

# Use exact versions to avoid dependency resolution issues
save-exact=true

# Increase timeout for slow networks
fetch-timeout=300000
fetch-retries=3
